<Window x:Class="WpfPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPizza"
        mc:Ignorable="d"
        Title="Wpf Pizza" Height="450" Width="800">
    <Grid Background="#FFEFF8A4">
        <Label x:Name="LblBestel" Content="Bestel je pizza" HorizontalAlignment="Left" Margin="57,59,0,0" VerticalAlignment="Top" Width="242" FontSize="22" FontWeight="Bold"/>
        <RadioButton x:Name="RdnHot" Content="Hot en Spicy" HorizontalAlignment="Left" Margin="85,124,0,0" VerticalAlignment="Top" Checked="RdnHot_Checked"/>
        <RadioButton x:Name="Rdn4" Content="4 Seizoenen" HorizontalAlignment="Left" Margin="85,157,0,0" VerticalAlignment="Top" Checked="Rdn4_Checked"/>
        <RadioButton x:Name="RdnHawai" Content="Hawai" HorizontalAlignment="Left" Margin="87,189,0,0" VerticalAlignment="Top" Checked="RdnHawai_Checked"/>
        <Label x:Name="LblMassege" Content="" HorizontalAlignment="Left" Margin="188,104,0,0" VerticalAlignment="Top" Width="269" Height="68"/>
        <Image x:Name="ImgPizza" HorizontalAlignment="Left" Height="125" Margin="532,104,0,0" VerticalAlignment="Top" Width="178"/>

    </Grid>
</Window>
