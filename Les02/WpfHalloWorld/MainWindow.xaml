<Window x:Class="WpfHalloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHalloWorld"
        mc:Ignorable="d"
        Title="WpfHelloWorld" Height="450" Width="800">
    <Grid Background="#FFF4F48A">
        <Label x:Name="LblHallo" Content="Hallo, wat is je naam?" HorizontalAlignment="Left" Margin="77,123,0,0" VerticalAlignment="Top" Width="284" FontSize="20"/>
        <Button x:Name="BtnOK" Content="OK" HorizontalAlignment="Left" Margin="376,164,0,0" VerticalAlignment="Top" Width="128" RenderTransformOrigin="0.5,0.5" Height="35" FontSize="20" Click="BtnOK_Click"/>
        <TextBox x:Name="TxtName" HorizontalAlignment="Left" Height="34" Margin="77,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="257"/>
        <Button Content="Herstel" HorizontalAlignment="Left" Margin="571,162,0,0" VerticalAlignment="Top" Width="104" Height="37" FontSize="20" Click="Button_Click"/>

    </Grid>
</Window>
